@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="search">
        <input type="text" placeholder="Search..">
        <button class="btn">Search</button>
    </div>
    @section Scripts {
        <script>
            $(document).ready(function () {
                $("#content1").hover(function () {
                    $("#content1").css("background-color", "cornsilk");
                },
                    function () {
                        $("#content1").css("background-color", "coral");
                    });
            });
            $(document).ready(function () {
                $("#content2").hover(function () {
                    $("#content2").css("background-color", "cornsilk");
                },
                    function () {
                        $("#content2").css("background-color", "coral");
                    });
            });
            $(document).ready(function () {
                $("#content3").hover(function () {
                    $("#content3").css("background-color", "cornsilk");
                },
                    function () {
                        $("#content3").css("background-color", "coral");
                    });
            });
        </script>
    }
    <div id="content1">
        <h2 id="pageTitle">Popular Topics</h2>
        <p>
            <ul class="columns" data-columns="2">
                <li>Motivational</li>
