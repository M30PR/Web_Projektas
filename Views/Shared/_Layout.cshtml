<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="icon" href="Images/logo.jpg" type="image/icon type" />
    <link rel="stylesheet" href="~/css/style.css" type="text/css" />
</head>
<body style="background-color:powderblue;">
    <div id="header">
        <div class="logo">
            <a href="#"><img src="Images/logo.jpg"></a>
        </div>
        <div class="topMenu">
            <a asp-area="" asp-controller="Home" asp-action="">Home</a>
            <a asp-area="" asp-controller="Quotes" asp-action="">Quotes</a>
            <a asp-area="" asp-controller="Authors" asp-action="">Authors</a>
            <a asp-area="" asp-controller="Topics" asp-action="">Topics</a>
            <a asp-area="" asp-controller="Tag" asp-action="">Tags</a>
            <a asp-area="" asp-controller="Account" asp-action="Register">Register</a>
            <a asp-area="" asp-controller="Account" asp-action="Login">Login</a>
        </div>
    </div>
    @RenderBody()
    @RenderSection("Scripts", required: false)
</body>
</html>